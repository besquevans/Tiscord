<% @messages.each do |message| %>
  <div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title text-muted">
        <%= message.user.username %>
        <small>
          -
          <%= time_ago_in_words message.created_at %>
          age
        </small>
      </h5>

      <div class="card-text lead mb-2">
        <%= message.content %>
      </div>
    </div>
  </div>
<% end %>     

<%= form_with(model: message, url: group_board_messages_path(group, board) ,local: true, html: {class: "form-inline w-100"}) do |form| %>

    <div class="form-group w-100 row">
      <%= form.text_field :content, placeholder: "輸入訊息", class: "col-9 form-control " %>
      <%= form.submit "Create", class:"col-3 btn btn-primary" %>
    </div>
<% end %>
