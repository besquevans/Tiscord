<% @messages.each do |message| %>
  <div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title text-muted">
        <%= message.user.username %>
        <small>
          -
          <%= time_ago_in_words message.created_at %>
          age
        </small>
      </h5>

      <div class="card-text lead mb-2">
        <%= message.content %>
      </div>
    </div>
  </div>
<% end %>     

<%= form_with(model: message, url: group_board_messages_path(group, board) ,local: true, html: {class: "my-4"}) do |form| %>
  <div class="form-group row">
    <%= form.text_field :content, placeholder: "輸入訊息" %>
  </div>

  <div class="form-group row">
    <%= form.submit "Create", class:"btn btn-primary" %>
  </div>
<% end %>
